@model IEnumerable<qlks.Models.DichVu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="w3-center w3-text-blue" style=" font-family: Times New Roman; font-size:50px ">Dịch vụ</h2>
@Styles.Render("~/Content/css")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label>Mã Dịch vụ </label>
        </th>
        <th>
            <label>Tên Dịch vụ </label>
        </th>
        <th>
            <label>Gía Dịch vụ </label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGiaVN)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaDV }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaDV }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaDV })
            </td>
        </tr>
    }

</table>
